<UserControl x:Class="Project_Launcher.UIElements.RenameField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_Launcher.UIElements"
             mc:Ignorable="d" 
             Height="120" Width="200">
    <Grid>
        <Border Background="White" Margin="15" CornerRadius="10" Padding="7">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Direction="0" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="NameTextBlock" Text="Выберите элемент списка" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Center"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Background="#E8E8E8"
                             x:Name="NameTextBox" 
                             BorderBrush="#BCBCBC" 
                             BorderThickness="1" 
                             FontWeight="DemiBold"
                             VerticalAlignment="Stretch" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" TextWrapping="WrapWithOverflow" >
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Style.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="3" />
                                    </Style>

                                </Style.Resources>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Button Width="40" Background="{x:Null}" BorderBrush="{x:Null}" Style="{StaticResource IconButtonStyle}" Grid.Column="1"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
